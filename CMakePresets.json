{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "test",
      "hidden": false,
      "displayName": "build tests",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "OUTCOME_TEST": "ON"
      }
    },
    {
      "name": "examples",
      "hidden": false,
      "displayName": "build examples",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "OUTCOME_EXAMPLES": "ON"
      }
    },
    {
      "name": "all",
      "hidden": false,
      "displayName": "build examples and tests",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "OUTCOME_TEST": "ON",
        "OUTCOME_EXAMPLES": "ON"
      }
    }
  ]
}
